<% layout('./layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px"></div>
<h1>All listing of Hotels</h1>
<div>
  <a href="/hotels/new">Add New Hotel</a>
</div>
<% for (let hotel of hotels) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(hotel.images.length > 0) {%>
      <img
        class="img-fluid"
        alt=""
        src="<%= hotel.images[0].url %>"
        style="width: 500px; height: 300px"
      />
      <% } else { %>
      <img
        class="img-fluid"
        alt=""
        src="https://images.unsplash.com/photo-1551882547-ff40c63fe5fa?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80"
        style="width: 500px; height: 300px"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= hotel.title %></h5>
        <p class="card-text"><%= hotel.description %></p>
        <p class="card-text">
          <small class="text-muted">
            <h5><b>$<%= hotel.price %> </b></h5></small
          >
        </p>
        <a class="btn btn-primary" href="/hotels/<%= hotel._id %> "
          >View <%= hotel.title %></a
        >
      </div>
    </div>
  </div>
</div>
<%}%>

<script>
  const hotels = {features: <%- JSON.stringify(hotels)%>}
</script>

<script src="/clusterMap.js"></script>
